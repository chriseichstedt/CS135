//this program builds an 9x9 magic square

#include <stdio.h>

int main()
{
	//establishing the array and variables	
	int array[9][9], i, j;

	//for loop that builds the array
	for(i=0; i<9; i++)
	{
		for(j=0; j<9; j++)
		{
			array[i][j] = (i+j)%9;
			printf("%d \t", array[i][j]);
		}
		printf("\n");
	}
	return 0;
}

